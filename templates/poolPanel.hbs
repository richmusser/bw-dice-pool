<div id="bw-dice-pool" class="flexcol {{ternary flushToBottom 'flush-bottom' ''}} {{ternary isBloodyVs 'expanded' ''}}" >

  <div class="flexrow">

    <div class="pool flexrow ">
    
      {{!-- Dice control buttons --}}
      <div class="pool-controls flexcol">
        <div class="btn btn-dice dice-increase-button" >
          <i class="fas fa-plus"></i>
        </div>

        <div class="btn btn-dice dice-decrease-button">
          <i class="fas fa-minus"></i>
        </div>

        <div class="btn btn-persona {{#if personaMode}}on{{/if}}">
          <span style="font-size: 16px">P</span>
        </div>
      </div>

      {{!-- Dice --}}
      <div class="dice-area">
          <div class="btn btn-shade">
            <span>{{shade}}</span>
          </div>
          {{#if renderDice}}
          <div class="dice-display">
            {{#times numDice}}
            <i class="die fas fa-dice-d6"></i>
            {{/times}}
            {{#times numPersona}}
            <i class="die fas fa-dice-d6" style="color:rgba(255, 0,0,.75)"></i>
            {{/times}}
          </div>          
          {{/if}}
          {{#unless renderDice}}
          <div class="dice-numeric">
            <span>{{numDice}}</span> <i class="die fas fa-dice-d6"></i>
          </div>
          <div>
          {{#times numPersona}}
            <i class="die fas fa-dice-d6" style="color:rgba(255, 0,0,.75)"></i>
          {{/times}}
          </div>
          {{/unless}}
      </div>
     
    </div>

    {{!-- vs divider --}}
    <div class="vs-divider">
      vs
    </div>

    {{!-- ob area--}}
    <div class="ob-area">
      <div class="flexrow align-center">
        <div>
          <div class="ob-label">Ob</div>
          <div class="ob-value">{{ob}}</div>
        </div>

        {{#if isGm}}
          <div class="ob-controls flexcol">
            <div class="btn btn-ob btn-ob-increase" title="Increase Obstacle">
              <i class="fas fa-plus"></i>
            </div>

            <div class="btn btn-ob btn-ob-decrease" title="Decrase Obstacle">
              <i class="fas fa-minus"></i>
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>

  {{!-- Split sections that appear when expanded --}}
  <div class="split-sections {{ternary isBloodyVs 'visible' ''}}">
    <div class="split-section attack-section">
      <div class="section-header">Attack</div>
      <div class="pool flexrow">
        <div class="pool-controls flexcol">
          <div class="btn btn-dice attack-increase-button">
            <i class="fas fa-plus"></i>
          </div>
          <div class="btn btn-dice attack-decrease-button">
            <i class="fas fa-minus"></i>
          </div>
        </div>
        <div class="dice-area">
          {{#if renderAttackDice}}
          <div class="dice-display">
            {{#times attackDice}}
            <i class="die fas fa-dice-d6" style="color:rgba(255, 0,0,.75)"></i>
            {{/times}}
          </div>          
          {{/if}}
          {{#unless renderAttackDice}}
          <div class="dice-numeric">
            <span>{{attackDice}}</span> <i class="die fas fa-dice-d6" style="color:rgba(255, 0,0,.75)"></i>
          </div>
          {{/unless}}
        </div>
      </div>
    </div>

    <div class="split-section defend-section">
      <div class="section-header">Defend</div>
      <div class="pool flexrow">
        <div class="pool-controls flexcol">
          <div class="btn btn-dice defend-increase-button">
            <i class="fas fa-plus"></i>
          </div>
          <div class="btn btn-dice defend-decrease-button">
            <i class="fas fa-minus"></i>
          </div>
        </div>
        <div class="dice-area">
          {{#if renderDefendDice}}
          <div class="dice-display">
            {{#times defendDice}}
            <i class="die fas fa-dice-d6" style="color:rgba(0, 0,255,.75)"></i>
            {{/times}}
          </div>          
          {{/if}}
          {{#unless renderDefendDice}}
          <div class="dice-numeric">
            <span>{{defendDice}}</span> <i class="die fas fa-dice-d6" style="color:rgba(0, 0,255,.75)"></i>
          </div>
          {{/unless}}
        </div>
      </div>
    </div>
  </div>

  {{!-- roll controls --}}
  <div class="roll-controls flexrow gap ">
    <div class="btn btn-roll roll">
      Roll
    </div>

    <div class="btn btn-roll roll-open">
      Open-Ended
    </div>

    <div class="btn btn-roll roll-dof">
      Die of Fate
    </div>

    <div class="btn btn-roll split-pool">
      Bloody Vs
    </div>
  </div>
</div>